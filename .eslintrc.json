{
  "extends": ["react-app", "react-app/jest", "plugin:react-hooks/recommended"],
  "plugins": ["react-hooks"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["warn", "single"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  },
  "ignorePatterns": ["src/libs/*.js"]
}
